.toast-container {
  position: fixed;
  bottom: 0.5em;
  right: 0.5em;
  left: 0.5em;
  text-align: right;
  .toast {
    &.error {
      background: #E53935;
    }
    &.success {
      background: #43A047;
    }
    color: #fff;
    display: inline-block;
    max-width: 100%;
    word-wrap: break-word;
    padding: 0.75em;
    opacity: 0;
    border-radius: 2px;
    transition: all 500ms ease-in-out;
  }
}
